<script>
     function deleteContact(button) {
        // Implement your delete functionality here
        // You can access the row and delete the corresponding data
        var row = button.closest('tr');
        row.remove();
    }

    function openUpdateModal(button) {
        // Populate the modal with existing data
        var row = button.closest('tr');
        var cells = row.getElementsByTagName('td');
        document.getElementById('updateName').value = cells[0].innerText;
        document.getElementById('updateEmail').value = cells[1].innerText;
        document.getElementById('updatePhone').value = cells[2].innerText;
        document.getElementById('updateMessage').value = cells[3].innerText;
    }

    function updateData() {
        // Implement your update functionality here
        // You can access the form data and update the corresponding row
        alert("Update functionality to be implemented");
        // Close the modal after updating
        $('#updateModal').modal('hide');
    }
</script>
